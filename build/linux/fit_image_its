/*
 * Simple U-boot uImage source file containing a single kernel and FDT blob
 */
/dts-v1/;
/ {
	description = "PetaLinux arm uImage with single Linux kernel and FDT blob";
	#address-cells = <1>;

	images {
		kernel@1 {
			description = "PetaLinux Kernel";
			data = /incbin/("./linux.bin.gz");
			type = "kernel";
			arch = "arm";
			os = "linux";
			compression = "gzip";
			load = <0x10008000>;
			entry = <0x10008000>;
			hash@1 {
				algo = "crc32";
			};
		};
		/* @@ramdisk_node@@
		ramdisk@1 {
			description = "ramdisk";
			data = /incbin/("./");
			type = "ramdisk";
			arch = "arm";
			os = "linux";
			load = <0x0>;
			compression = "none";
			hash@1 {
				algo = "crc32";
			};
			hash@2 {
				algo = "sha1";
			};
		};
	@@ramdisk_node@@ */
		fdt@1 {
			description = "Flattened Device Tree blob";
			data = /incbin/("./target.dtb");
			type = "flat_dt";
			arch = "arm";
			compression = "none";
			hash@1 {
				algo = "crc32";
			};
		};
	};

	configurations {
		default = "conf@1";
		conf@1 {
			description = "PetaLinux Boot Linux kernel with FDT blob";
			kernel = "kernel@1";
			/* @@ramdisk_node@@
			ramdisk = "ramdisk@1";
			@@ramdisk_node@@ */
			fdt = "fdt@1";
		};
	};
};
